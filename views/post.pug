doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description' content='')
    meta(name='author' content='')
    title Clean Blog - Start Bootstrap Theme
    link(rel='icon' type='image/x-icon' href='assets/favicon.ico')
    // Font Awesome icons (free version)
    script(src='https://use.fontawesome.com/releases/v6.1.0/js/all.js' crossorigin='anonymous')
    // Google fonts
    link(href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css')
    // Core theme CSS (includes Bootstrap)
    link(href='css/style.css' rel='stylesheet')
    link(href='css/edit.css' rel='stylesheet')
  body
    // Navigation
    include partials/navigation
    // Post Header
    header#masthead.masthead(style=`background-image: url('${post.background}')`)
      .container.position-relative.px-4.px-lg-5
        .row.gx-4.gx-lg-5.justify-content-center
          .col-md-10.col-lg-8.col-xl-7
            .post-heading
              if (user)
                .settings.text-center
                  a(href=`/update-post?article=${post.handle}`)
                    i.fa-solid.fa-pen-to-square
                  //- a(href=`/gonderiyi-sil?yazi=${handle}`)
                  //-   i.fa-solid.fa-trash-can
                  a#eye(link=`/hide-post?article=${post.handle}` style=`display: ${post.public ? 'inline' : 'none'};`)
                    .fa-solid.fa-eye
                  a#eye-slash(link=`/publish-post?article=${post.handle}` style=`display: ${!post.public ? 'inline' : 'none'};`)
                    i.fa-solid.fa-eye-slash
                  a#delete(article-handle=post.handle)
                    i.fa-regular.fa-trash-can
              if (!post.title || post.title === ' ')
                h1#title &nbsp;
              else
                h1#title=post.title
              if (!post.subtitle || post.subtitle === ' ')
                span#subtitle.subheading &nbsp;
              else
                span#subtitle.subheading=post.subtitle
              span.meta
                | Posted by&nbsp;
                a(href="#") #{post.author.name}&nbsp;
                span=post.date
    // Post Content
    article.mb-4
      .container.px-4.px-lg-5
        .row.gx-4.gx-lg-5.justify-content-center
          .col-md-10.col-lg-8.col-xl-7
            include partials/alert
            .fr-view !{post.content}
    // Footer
    include partials/pageFooter
    // Bootstrap core JS
    script(src='bootstrap5/js/bootstrap.bundle.min.js' type='text/javascript')
    // Core theme JS
    script(src='js/script.js' type='text/javascript')
    script(src='js/axios.min.js' type='text/javascript')
    script(src='js/edit.js' type='text/javascript')
