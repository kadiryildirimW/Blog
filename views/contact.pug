doctype html
html(lang='tr')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description' content='')
    meta(name='author' content='')
    title Clean Blog - Start Bootstrap Theme
    link(rel='icon' type='image/x-icon' href='assets/favicon.ico')
    // Font Awesome icons (free version)
    script(src='https://use.fontawesome.com/releases/v6.1.0/js/all.js' crossorigin='anonymous')
    // Google fonts
    link(href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css')
    // Core theme CSS (includes Bootstrap)
    link(href='css/style.css' rel='stylesheet')
    link(href='css/edit.css' rel='stylesheet')
  body
    // Navigation
    include partials/navigation
    // Page Header
    header#masthead.masthead(style=`background-image: url('${background}')`)
      .container.position-relative.px-4.px-lg-5
        .row.gx-4.gx-lg-5.justify-content-center
          .col-md-10.col-lg-8.col-xl-7
          if (user)
            .settings.text-center
              a(href=`/iletisim-sayfasini-duzenle`)
                i.fa-solid.fa-pen-to-square
            .site-heading
              if (title === ' ')
                h1#title &nbsp;
              else
                h1#title=title
              if (subtitle === ' ')
                span#subtitle.subheading &nbsp;
              else
                span#subtitle.subheading=subtitle  
    // Main Content
    main.mb-4
      .container.px-4.px-lg-5
        .row.gx-4.gx-lg-5.justify-content-center
          .col-md-10.col-lg-8.col-xl-7
            include partials/alert
            p#contactDescription=contactDescription
            form#contactForm(action='/iletisim' method='POST' data-sb-form-api-token='API_TOKEN')
              .form-floating
                input#name.form-control(name='name' type='text' placeholder='Enter your name...' data-sb-validations='required')
                label(for='name') İsim
                .invalid-feedback(data-sb-feedback='name:required') İsim alanı boş bırakılamaz.
              .form-floating
                input#email.form-control(name='email' type='email' placeholder='Enter your email...' data-sb-validations='required,email')
                label(for='email') Email address
                .invalid-feedback(data-sb-feedback='email:required') Email alanı boş bırakılamaz.
                .invalid-feedback(data-sb-feedback='email:email') Geçerli bir email girin.
              .form-floating
                input#phone.form-control(name='phone' type='tel' placeholder='Enter your phone number...' data-sb-validations='required')
                label(for='phone') Telefon Numarası
                .invalid-feedback(data-sb-feedback='phone:required') Lütfen bir telefon numarası girin.
              .form-floating
                textarea#message.form-control(name='message' placeholder='Enter your message here...' style='height: 12rem' data-sb-validations='required')
                label(for='message') Mesaj
                .invalid-feedback(data-sb-feedback='message:required') Mesaj alanı boş bırakılamaz.
              br
              #submitSuccessMessage.d-none
                .text-center.mb-3
                  .fw-bolder Form submission successful!
                  |                                         To activate this form, sign up at
                  br
                  a(href='https://startbootstrap.com/solution/contact-forms') https://startbootstrap.com/solution/contact-forms
              // Submit error message
              // 
              // This is what your users will see when there is
              // an error submitting the form
              #submitErrorMessage.d-none
                .text-center.text-danger.mb-3 Error sending message!
              // Submit Button
              button#submitButton.btn.btn-primary.text-uppercase.disabled(type='submit') Gönder
    // Footer
    include partials/pageFooter
    // Modal
    include partials/modal
    // Bootstrap core JS
    script(src='bootstrap5/js/bootstrap.bundle.min.js' type='text/javascript')
    // Core theme JS
    script(src='js/script.js' type='text/javascript')
    script(src='js/sb-forms-latest.js' type='text/javascript')
    script(src='js/contact.js' type='text/javascript')
    script(src='js/edit.js' type='text/javascript')